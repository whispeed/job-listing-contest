<h2>已应聘的工作</h2>

<div class="dropdown clearfix pull-right">
  <button class="btn btn-default dropdown-toggle" type="button" id="dropdownMenuDivider" data-toggle="dropdown" aria-haspoup="true" aria-expanded="true">
    排序<span class="caret"></span>
  </button>
  <ul class="dropdown-menu" aria-labelledby="dropdownMenuDivider">
    <li>
      <%= link_to("按照薪资下限排序", account_jobs_path(:order => "by_lower_bound")) %>
    </li>
    <li>
      <%= link_to("按照薪资上限排序", account_jobs_path(:order => "by_upper_bound")) %>
    </li>
    <li>
      <%= link_to("按照发布时间排序", account_jobs_path) %>
    </li>
  </ul>
</div>

<table class="table table-striped table-responsive">
  <thead>
    <tr>
      <td>职位名称</td>
      <td>简历内容</td>
      <td>更新时间</td>
    </tr>
  </thead>
  <tbody>
    <% @resumes.each do |resume| %>
    <tr>
      <td>
        <%= link_to(resume.job.title, job_path(resume.job)) %>
      </td>
      <td>
        <%= simple_format(resume.content) %>
      </td>
      <td>
        <%= resume.updated_at %>
      </td>
    </tr>
    <% end %>
  </tbody>
</table>
