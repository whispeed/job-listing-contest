<table class="table table-striped table-responsive">
  <thead>
    <tr>
      <td>职位名称</td>
      <td>薪资范围</td>
      <td>职位类别</td>
      <td>发布公司</td>
      <td>城市</td>
      <td>发布时间</td>
    </tr>
  </thead>
  <tbody>
    <% @jobs = Job.where(:is_hidden => false, :category => "产品").recent.paginate(:page => params[:page], :per_page => 10) %>
    <% @jobs.each do |job| %>
    <tr>
      <td>
        <%= link_to(job.title, job_path(job)) %>
      </td>
      <td>
        <%= job.wage_lower_bound %> ～ <%= job.wage_upper_bound %>
      </td>
      <td>
        <%= job.category %>
      </td>
      <td>
        <%= job.company %>
      </td>
      <td>
        <%= job.location %>
      </td>
      <td>
        <%= job.created_at %>
      </td>
    </tr>
    <% end %>
  </tbody>
</table>

<div class="text-center">
  <%= will_paginate @jobs %>
</div>
