<h1> <%= @job.title %> </h1>

<p>
  <%= @job.company %>
  <%= @job.location %>
  <%= @job.category %>
  <%= @job.wage_lower_bound %>
  <%= @job.wage_upper_bound %>
  <%= simple_format(@job.description) %>
</p>

<% if current_user && !current_user.is_admin %>
  <div class="pull-left">
    <% if current_user && current_user.is_follower_of?(@job) %>
      <%= link_to("取消收藏", unfollow_job_path(@job), method: :post, :class => "btn btn-info") %>
    <% else %>
      <%= link_to("收藏工作", follow_job_path(@job), method: :post, :class => "btn btn-default") %>
    <% end %>
  </div>
<% end %>

<div class="panel panel-default">
  <div class="panel-heading">
    <h3 class="panel-title">Panel title</h3>
  </div>
  <div class="panel-body">
    Panel content
  </div>
</div>
