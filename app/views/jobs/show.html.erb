<div class="row show-title">
  <div class="col-md-8">
    <p> <%= @job.company %>招聘
      <h1 style="margin-top:10px"> <%= @job.title %> </h1>
      <span style="color:#FF5E2E"><%= @job.wage_lower_bound %> ～
      <%= @job.wage_upper_bound %></span> /
      <%= @job.location %> /
      <%= @job.category %>
    </p>
  </div>
  <div class="col-md-4">
    <% if current_user && !current_user.is_admin %>
      <div class="pull-left">
        <% if current_user && current_user.is_follower_of?(@job) %>
          <%= link_to("取消收藏", unfollow_job_path(@job), method: :post, :class => "btn btn-info") %>
        <% else %>
          <%= link_to("收藏工作", follow_job_path(@job), method: :post, :class => "btn btn-default") %>
        <% end %>
      </div>
    <% end %>
  </div>
</div>

<div class="row show-description">
  <h5>职位描述：</h5>
  <%= simple_format(@job.description) %>
</div>
