<div class="btn-group pull-left" role="group" aria-label="filters" style="margin: 20px 0px 20px 0px">
  <div class="btn-group" role="group">
    <button type="button" class="btn btn-default dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
      地点
      <span class="caret"></span>
    </button>
    <ul class="dropdown-menu">
      <li>
        <%= link_to("北京", jobs_path(:location => "北京")) %>
      </li>
      <li>
        <%= link_to("上海", jobs_path(:location => "上海")) %>
      </li>
      <li>
        <%= link_to("广州", jobs_path(:location => "广州")) %>
      </li>
      <li>
        <%= link_to("深圳", jobs_path(:location => "深圳")) %>
      </li>
      <li>
        <%= link_to("其他", jobs_path(:location => "其他")) %>
      </li>
    </ul>
  </div>

  <div class="btn-group" role="group">
    <button type="button" class="btn btn-default dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
      类别
      <span class="caret"></span>
    </button>
    <ul class="dropdown-menu">
      <li>
        <%= link_to("咖啡", jobs_path(:category => "咖啡")) %>
      </li>
      <li>
        <%= link_to("餐厅", jobs_path(:category => "餐厅")) %>
      </li>
      <li>
        <%= link_to("酒吧", jobs_path(:category => "酒吧")) %>
      </li>
    </ul>
  </div>

  <div class="btn-group" role="group">
    <button type="button" class="btn btn-default dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
      全部工作
      <span class="caret"></span>
    </button>
    <ul class="dropdown-menu">
      <li>
        <%= link_to("按照薪资下限排序", jobs_path(:order => "by_lower_bound")) %>
      </li>
      <li>
        <%= link_to("按照薪资上限排序", jobs_path(:order => "by_upper_bound")) %>
      </li>
      <li>
        <%= link_to("按照发布时间排序", jobs_path) %>
      </li>
    </ul>
  </div>
</div>

<table class="table table-striped table-responsive">
  <thead>
    <tr>
      <td>职位名称</td>
      <td>薪资范围</td>
      <td>职位类别</td>
      <td>发布公司</td>
      <td>城市</td>
      <td>发布时间</td>
    </tr>
  </thead>
  <tbody>
    <% @jobs.each do |job| %>
    <tr>
      <td>
        <%= link_to(job.title, job_path(job)) %>
      </td>
      <td>
        <%= job.wage_lower_bound %> ～ <%= job.wage_upper_bound %>
      </td>
      <td>
        <%= job.category %>
      </td>
      <td>
        <%= job.company %>
      </td>
      <td>
        <%= job.location %>
      </td>
      <td>
        <%= job.created_at %>
      </td>
      <td>
        <% if !current_user %>
          <a href="#" data-toggle="modal" data-target="#signup-modal" class="btn btn-info">注册投简历</a>
        <% end %>

        <div class="modal fade" id="signup-modal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true" style="display: none;">
          <div class="modal-dialog">
            <div class="loginmodal-container">
              <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                <span aria-hidden="true">&times;</span>
              </button>
              <h2>注册新用户</h2>

              <div>

                <!-- Nav tabs -->
                <ul class="nav nav-tabs" role="tablist">
                  <li role="presentation" class="active"><a href="#personal" aria-controls="personal" role="tab" data-toggle="tab">个人用户</a></li>
                  <li role="presentation"><a href="#business" aria-controls="business" role="tab" data-toggle="tab">企业用户</a></li>
                </ul>

                <!-- Tab panes -->
                <div class="tab-content">
                  <div role="tabpanel" class="tab-pane active" id="personal"><%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
                    <%= f.error_notification %>
                      <div class="form-inputs">
                        <br />
                        <%= f.input :email, label: "邮箱", required: true, autofocus: true %>
                        <%= f.input :name, label: "用户名", required: true %>
                        <%= f.input :password, label: "密码", required: true, hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length) %>
                        <%= f.input :password_confirmation, label: "确认密码", required: true %>
                      </div>
                      <div class="form-actions">
                          <%= f.button :submit, "注册" %>
                      </div>
                    <% end %>
                  </div>
                  <div role="tabpanel" class="tab-pane" id="business">
                    <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
                    <%= f.error_notification %>
                    <div class="form-inputs">
                      <br />
                      <%= f.input :email, label: "邮箱", required: true, autofocus: true %>
                      <%= f.input :name, label: "公司名称", required: true %>
                      <%= f.input :password, label: "密码", required: true, hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length) %>
                      <%= f.input :password_confirmation, label: "确认密码", required: true %>
                      <%= f.hidden_field :is_admin, value: "true" %>
                    </div>
                    <div class="form-actions">
                        <%= f.button :submit, "注册" %>
                    </div>
                  <% end %>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>

        <% if current_user && !current_user.is_admin %>
          <div class="pull-left">
            <% if current_user && current_user.is_applicant_of?(job) %>
              <%= link_to("已投递", "#", :class => "btn btn-success" ) %>
            <% else %>
              <%= link_to("投简历", new_job_resume_path(job), :class => "btn btn-default" ) %>
            <% end %>
          </div>

          <div class="pull-left">
            <% if current_user && current_user.is_follower_of?(job) %>
              <%= link_to("取消收藏", unfollow_job_path(job), method: :post, :class => "btn btn-info") %>
            <% else %>
              <%= link_to("收藏工作", follow_job_path(job), method: :post, :class => "btn btn-default") %>
            <% end %>
          </div>
        <% end %>
      </td>
    </tr>
    <% end %>
  </tbody>
</table>
